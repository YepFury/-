/* pages/discovery/discovery.wxss */
.slide-image {
  width: 100%;
}
.section {
  width: 100%;
  height: 180rpx;
}
.flex-wrp {
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: row;
}
.flex-item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  padding-top: 20rpx;
}
.flex-item text {
  display: block;
}
.flex-item view {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border:1px solid #132f00;
  border-radius: 50%;
  font-size: 64rpx;
  line-height: 120rpx;
  color: #132f00;
}
.flex-item image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
}
